<Window x:Class="CashRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashRegister"
        mc:Ignorable="d"
        Title="Cash Register" Height="660" Width="1000">
    <Border Padding="10">


        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Background="Aquamarine" Orientation="Horizontal">
                <Button Width="40" Height="40"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Left" Background="red" Orientation="Vertical">
                <Button DockPanel.Dock="Top" Width="120" Height="40" Margin="5" Background="White"></Button>
                <Button DockPanel.Dock="Top" Width="120" Height="40" Margin="5" Background="White"></Button>
                <Button DockPanel.Dock="Top" Width="120" Height="40" Margin="5" Background="White"></Button>
                <Button DockPanel.Dock="Bottom" Width="120" Height="40" Margin="5" Background="White"></Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Background="blue"></StackPanel>
        </DockPanel>
        
        
